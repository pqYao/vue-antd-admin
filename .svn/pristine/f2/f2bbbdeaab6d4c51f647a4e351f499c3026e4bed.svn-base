<template>
  <div class="sign-up-edit-wrapper">
    <project-info 
      id="项目信息"
      url="/bid/prepare/detail" 
      :projectData="projectData">
    </project-info>
    <purchase-files
      id="采购文件"
      :pageType=1
      :projectData="projectData">
    </purchase-files>
    <bid-bond
      id="投标保证金"
      :pageType=1
      :projectData="projectData">
    </bid-bond>
    <answer-info
      id="应答信息"
      :pageType=1
      :projectData="projectData">
    </answer-info>
    <!-- 审批操作 -->
    <audit-button>
      <a-button 
        type="primary" 
        @click="fnCheckInvitation">
        澄清发布&查看
      </a-button>
      <a-popconfirm
        title="确定提交应答文件？"
        @confirm="fnConfirm">
        <a-button type="primary">
          提交应答文件
        </a-button>
      </a-popconfirm>
      <a-popconfirm
        title="确定撤回应答文件?"
        @confirm="fnConfirm">
        <a-button type="primary">
          撤回应答文件
        </a-button>
      </a-popconfirm>
    </audit-button>
    <Anchor :anchorList="anchorList"></Anchor>
  </div>
</template>

<script>
import {mixins} from "./mixins.js";
import { submitSignUp } from "@/services/response";

export default {
  name: 'sign-up-edit',
  mixins: [mixins],
  components: {
    AuditButton: () => import("@/components/button/AuditButton")
  },
  data() {
    return {
    }
  },
  created() {
    this.fnGetProjectData();
  },
  activated() {
    this.fnGetProjectData();
  },
  methods: {
    fnCheckInvitation() {
      this.$router.push({
        path: `/bid/prepare/detail/${this.projectData.projectId}`
      });
    },
    fnConfirm() {
      let param = {
        projectId: this.projectData.projectId,
        checkFlag: false
      };
      submitSignUp(param).then(res => {
        const resData = res.data;
        if (resData.errCode == "0000") {
          this.fnGetData();
          this.$message.success(resData.responseResult, 3);
        } else {
          this.$error({
            content: this.BASE.handleErrorMsg(resData)
          });
        }
      });
    }
  },
};
</script>