<template>
  <div>
    <a-card>

      <Heading name="产品明细" >
        <template v-if="!this.isDetail">
          <a-button type="primary" @click="handleAdd('product')">
            关联产品
          </a-button>
          <a-button type="primary" @click="handleDelete">
            <i :class="['iconfont', 'icon-weibiaoti544']"></i>
            批量删除
          </a-button>
          <a-button type="primary" @click="handleSubmit">
            <i :class="['iconfont', 'icon-baocun']" :disabled="isConnect"></i>
            保存
          </a-button>
        </template>
      </Heading>
      <a-table
        class="es-table"
        size="small"
        :bordered="true"
        :loading="pageData.loading"
        :pagination="false"
        :columns="columns"
        :dataSource="dataSource"
        rowKey="projectDetailId"
        :rowSelection="
          isDetail
            ? null
            : {
                fixed: true,
                selectedRowKeys: selectedRowKeys,
                onChange: onSelectChange
              }
        "
        :scroll="{ x: true }"
      >
        <template slot="requirementAmout" slot-scope="text, record, index">
          <a-form v-if="!isDetail" :form="form" @submit="handleSubmit">
            <a-form-item>
              <a-input
                allowClear
                v-decorator="[
                  `requirementAmout${index}`,
                  {
                    validateTrigger: ['blur'],
                    rules: [{ required: true, validator: checkAmount }],
                    initialValue: text
                  }
                ]"
                @change="
                  e =>
                    onCellChange(
                      e.target.value,
                      record.projectDetailId,
                      'requirementAmout'
                    )
                "
                style="margin: -5px 0;width:100%"
              />
            </a-form-item>
          </a-form>
          <span v-else>{{ text }}</span>
        </template>

        <template slot="action" slot-scope="record">
          <a-popconfirm
            title="是否确认删除所选行?"
            ok-text="确认"
            cancel-text="取消"
            @confirm="deleteById(record.projectDetailId)"
          >
            <a style="margin-right: 8px">删除</a>
          </a-popconfirm>
        </template>
      </a-table>
      <pagination
        v-if="show && this.isDetail"
        :value="pageData.page"
        :pageSize="pageData.limit"
        v-show="pageData.total > 0"
        :total="pageData.total"
        @change="sizeChange"
        @showSizeChange="pageChange"
      ></pagination>
    </a-card>
    <a-modal
      title="选择产品"
      width="80%"
      v-if="productVisible"
      v-model="productVisible"
      @ok="handleOk('product')"
    >
      <ProductSelect ref="product"></ProductSelect>
    </a-modal>
  </div>
</template>

<script>
import Heading from "@/components/heading/Heading";
import {
  findSubContractForDetail,
  deleteSubContractDetail,
  relevanceSubContractDetailProduct,
  updateProductInfo
} from "@/services/bid";
import Pagination from "@/components/pagination/Pagination";
import ProductSelect from "./ProductSelect";

const pageData = {
  limit: 10,
  total: 0,
  page: 1,
  loading: false
};

const columns = [
  {
    title: "序号",
    dataIndex: "number",
    align: "center",
    width: 80,
    customRender: (text, record, index) =>
      `${(pageData.page - 1) * pageData.limit + index + 1}`
  },
  {
    title: "标名",
    dataIndex: "subTenderName",
    align: "center"
  },
  {
    title: "包名",
    dataIndex: "subcontractingName"
  },
  {
    title: "产品编码",
    dataIndex: "productCode",
    align: "center"
  },
  {
    title: "产品名称",
    dataIndex: "productName",
    align: "center"
  },
  {
    title: "单位",
    dataIndex: "measure",
    align: "center"
  },
  {
    title: "总数量",
    dataIndex: "totalAmount",
    align: "center"
  },
  {
    title: "需求数量",
    dataIndex: "amount",
    align: "center"
  },
  {
    title: "操作",
    align: "center",
    scopedSlots: { customRender: "action" },
    fixed: "right",
    width: 80
  }
];

const dataSource = [];

export default {
  name: "product",
  components: { Heading, Pagination, ProductSelect },
  props: {
    isDetail: {
      type: Boolean,
      default: false
    }
  },
  data() {
    return {
      form: this.$form.createForm(this),
      columns: columns,
      dataSource: dataSource,
      selectedRowKeys: [],
      selectedRows: [],
      projectId: this.$route.params.id,
      show: false,
      isConnect: false,
      productVisible: false,
      pageData: pageData
    };
  },
  watch: {
    isDetail: {
      handler(val) {
        if (val) {
          const newColumns = [...this.columns];
          delete newColumns[8];
          this.columns = newColumns;
        }
        return val;
      },
      immediate: true,
      deep: true
    }
  },
  created() {
    this.getData();
  },
  methods: {
    getData() {
      let param = Object.assign(
        {
          limit: this.pageData.limit,
          page: this.isDetail ? 10000 : this.pageData.page,
          projectId: this.projectId
        },
        this.filter
      );
      this.pageData.loading = true;
      findSubContractForDetail(param).then(res => {
        const resData = res.data;
        const responseResult = res.data.responseResult;
        if (resData.errCode == "0000") {
          const { data, total } = responseResult;
          this.dataSource = data;
          console.log(this.dataSource);

          this.pageData.total = Number(total);
        } else {
          this.$error({
            content: resData.customMess
          });
        }
        this.pageData.loading = false;
      });
    },
    handleAdd(key) {
      this[`${key}Visible`] = true;
    },
    handleOk(key) {
      const data = this.$refs[key].getRes();
      relevanceSubContractDetailProduct(data).then(res => {
        const resData = res.data;
        if (resData.errCode === "0000") {
          const { responseResult } = resData;
          this.$message.success(responseResult, 3);
          this.getData();
        } else {
          this.$error({
            content: resData.customMess
          });
        }
      });
      this[`${key}Visible`] = false;
    },
    checkAmount(rule, value, callback) {
      if (!this.BASE.CheckIsNullOrEmpty(value)) {
        callback("请输入需求数量");
        return;
      }
      let reg = this.BASE.reg.mountReg;
      if (value && !reg.test(value)) {
        callback("请输入正确的数量");
      }
      callback();
    },
    onCellChange(value, key, column) {
      const newData = [...this.dataSource];
      const target = newData.filter(item => key === item.projectDetailId)[0];
      if (target) {
        target[column] = value;
        this.dataSource = newData;
      }
    },
    handleSubmit(e) {
      e.preventDefault(e);
      this.form.validateFields(error => {
        if (error) {
          return;
        }
        this.isConnect = true;
        this.updateInfo();
      });
    },
    // 更新
    updateInfo() {
      updateProductInfo(this.dataSource).then(res => {
        const resData = res.data;
        if (resData.errCode === "0000") {
          this.$message.success(resData.responseResult, 3);
          this.isConnect = false;
          this.getData();
        } else {
          this.$error({
            content: resData.customMess
          });
        }
      });
    },
    onSelectChange(data, row) {
      this.selectedRowKeys = data;
      this.selectedRows = row;
    },
    handleDelete() {
      if (!this.selectedRowKeys.length) {
        this.$message.warning("请至少选择一条数据进行删除！");
        return false;
      }
      let _vm = this;
      this.$confirm({
        title: `确定要删除所选行？`,
        onOk() {
          _vm.deleteById();
        },
        onCancel() {}
      });
    },
    // 删除
    deleteById(id) {
      let projectDetailIds = id || this.selectedRowKeys.join(",");
      deleteSubContractDetail(projectDetailIds).then(res => {
        const resData = res.data;
        if (resData.errCode === "0000") {
          const { responseResult } = resData;
          this.$message.warning(responseResult);
          this.selectedRowKeys = [];
          this.getData();
        }
      });
    },
    sizeChange(page, pageSize) {
      this.pageData.page = page;
      this.pageData.limit = pageSize;
      this.getData();
    },
    pageChange(current, size) {
      this.pageData.page = current;
      this.pageData.limit = size;
      this.getData();
    }
  }
};
</script>
