.shadow {
  box-shadow: 3px 0px 5px 0px @shadow ;
}

.side-menu {
  min-height: 100vh;
  overflow-y: auto;
  z-index: 10;

  .logo {
    height: 50px;
    position: relative;
    line-height: 50px;
    padding-left: 24px;
    -webkit-transition: all .3s;
    transition: all .3s;
    overflow: hidden;
    background-color: @layout-trigger-background;

    &.light {
      background-color: #fff;

      h1 {
        color: @primary-color;
      }
    }

    h1 {
      color: @menu-dark-highlight-color;
      font-size: 20px;
      margin: 0 0 0 12px;
      display: inline-block;
      vertical-align: middle;
    }

    img {
      width: 32px;
      vertical-align: middle;
    }
  }

  // es
  /deep/.ant-menu-submenu-title {
    border-bottom: 1px solid @gray-3;
  }
  /deep/.ant-menu-item {
    border-bottom: 1px solid @gray-3;
  }
  /deep/.anticon {
    color: @anticon;
  }
  /deep/.ant-menu:not(.ant-menu-horizontal) .ant-menu-item-selected {
    font-weight: bold;
  }
  /deep/.ant-menu-submenu-title {
    color: @black;
  }
  /deep/.iconfont {
    font-size: 20px;
    margin-left: -6px;
  }
}